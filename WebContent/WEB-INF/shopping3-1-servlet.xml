<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- HandlerMapping -->
	<bean id="handlerMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<value>
				/index.html = indexController
				/detail.html = detailController
				/login.html = loginFormController
				/userEntry.html = userEntryFormController
			</value>
		</property>
	</bean>
	<!-- Controller -->
	<bean id="indexController" class="controller.IndexController" p:shop-ref="shop">	
	</bean>
	<bean id="detailController" class="controller.DetailController" p:shop-ref="shop">
	</bean>
	<bean id="loginFormController" class="controller.LoginFormController" p:shop-ref="shop" p:loginValidator-ref="loginValidator">
	</bean>
	<bean id="userEntryFormController" class="controller.UserEntryFormController" p:shop-ref="shop" p:userEntryValidator-ref="userEntryValidator" p:messageSource-ref="messageSource">
	</bean>
	<!-- ViewResolver -->
	<bean id="internalResourceViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass">
			<value>org.springframework.web.servlet.view.JstlView</value>
		</property>
		<property name="prefix">
			<value>/WEB-INF/jsp/</value>
		</property>
		<property name="suffix">
			<value>.jsp</value>
		</property>
	</bean>	
</beans>